const express = require('express');
const router = express.Router();

const { createBookScenario } = require('../services/createBookScenario');

router.post('/books/full-create', async (req, res) => {
  try {
    const result = await createBookScenario(req.body);
    res.status(201).json(result);
  } catch (error) {
    res.status(400).json({
      message: error.message,
    });
  }
});

module.exports = router;